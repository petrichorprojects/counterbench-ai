{
  "rewrites": [
    { "source": "/advisory", "destination": "/pages/advisory.html" },
    { "source": "/the-counterbench", "destination": "/pages/newsletter.html" },
    { "source": "/newsletter", "destination": "/pages/newsletter.html" },
    { "source": "/diagnostic", "destination": "/pages/diagnostic.html" },
    { "source": "/insights", "destination": "/pages/insights.html" },
    { "source": "/about", "destination": "/pages/about.html" },
    { "source": "/contact", "destination": "/pages/contact.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/css/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/js/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    }
  ]
}
